<Window x:Class="ZTP.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZTP"
        mc:Ignorable="d"
        Title="InfoWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Label x:Name="LabelInfo" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ScrollViewer>
            <Button Content="Close" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Window>
